{
  "name": "Github compare tags",
  "version": "0.0.6",
  "manifest_version": 2,
  "description": "Adds tags to the compare page of Github.",
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "permissions": [
    "storage",
    "https://github.com/*"
  ],
  "background": { "scripts": ["src/hot-reload.js"] },
  "options_ui": {
    "page": "src/options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "https://github.com/*"
      ],
      "js": [
        "src/inject.js"
      ]
    }
  ]
}
